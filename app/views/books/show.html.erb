<% if flash[:notice] %>
  <div class="flash-text-box">
  <div class="flash-text">
    <%= flash[:notice] %>
  </div>
  </div>
<% end %>
<div class="show-title-box">
  <p class="show-title-text">
    <span class="show-title">Title:</span>
    <%= @book.title %>
  </p>
</div>
<div class="show-body-box">
  <p class="show-body-text">
    <span class="show-body">Body:</span>
      <%= @book.body %>
  </p>
</div>
<div class="show-link">
  <%= link_to "Edit", edit_book_path(@book.id), class: "edit_#{@book.id}" %>
  <%= link_to "Back", books_path, class: "back" %>
</div>
