<header>
  <h1>Books</h1>
</header>
    <table class="book-table">
    <thead>
    <tr>
      <th> Title</th>
      <th> Body</th>
    </tr>
    </thead>
    <tbody>
   	<% @books.each do |book| %>
   	<tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id),class: "show_#{book.id} list-box" %></td>
        <td><%= link_to "Edit", edit_book_path(book.id),class: "edit_#{book.id} list-box" %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete,class: "destroy_#{book.id} list-box-last", "data-confirm" => "Are you sureï¼Ÿ"%></td>
    </tr>
    <% end %>
    </tbody>
    </table>
  <div class="new-book-box">
    <h2>New book</h2>
      <% if flash[:notice] %>
      <div class="new-book-flash">
      <div class="new-book-flash-text">
        <%= flash[:notice] %>
      </div>
      </div>
      <% end %>
  <%= form_for(@book) do |f| %>

    <h4> Title</h4>
    <%= f.text_field :title,class: "book_title" %>

    <h4> Body</h4>
    <%= f.text_area :body,class: "book_body" %>

    <div><%= f.submit 'Create book' %></div>

  <% end %>
  </div>